<script>
	var xhr = new XMLHttpRequest();
	xhr.open("GET", "https://newsapi.org/v2/everything?q=bitcoin&apiKey=8706bed3e9504d41b528ee66599dc9da", true);

	var response = {};
	xhr.onreadystatechange = function() {
		if (xhr.readyState == 4 && xhr.status == 200) {
			var obj = JSON.parse(xhr.responseText);
			const articlesArray = obj.articles;
			const lengthOfArticles = articlesArray.length;

			console.log(lengthOfArticles);
			var i=0
			for (let i = 0; i < 6; i++) {
				const article = articlesArray[i];
				const cardTitleElement = document.getElementById("h5-" + (i + 1));
				const cardParaElement = document.getElementById("para-" + (i + 1));
				const cardImageElement = document.getElementById("img-"+(i+1));
				const cardUrlElement = document.getElementById("anc-"+(i+1))
		        cardImageElement.src = article.urlToImage;
				cardTitleElement.innerHTML = article.title;
				const words = article.description.split(' ');
				const limitedDescription = words.slice(0, 20).join(' ');
				cardParaElement.innerHTML = limitedDescription + '...';
				cardUrlElement.href = article.url;
			}
		}
	};
	xhr.send();
</script>


